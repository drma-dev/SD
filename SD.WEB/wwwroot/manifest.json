{
  //INFO
  "id": "streamingdiscovery",
  "name": "Streaming Discovery",
  "short_name": "Streaming Discovery",
  "description": "Manage your streaming platforms, what you watched, are watching and want to watch. All in one place.",
  "background_color": "#ffffff",
  "theme_color": "#03173d",
  //SETTINGS
  "start_url": "/",
  "dir": "ltr",
  "lang": "en-US",
  "orientation": "any",
  "display": "standalone",
  "display_override": [
    "standalone",
    "window-controls-overlay"
  ],
  //PLATAFORM
  "iarc_rating_id": "2673f916-2fd7-4be8-8523-88d7588cc444",
  "prefer_related_applications": true,
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.streamingdiscovery.www.twa",
      "id": "com.streamingdiscovery.www.twa"
    },
    {
      "platform": "windows",
      "url": "https://apps.microsoft.com/store/detail/streaming-discovery/9PB1PKRDD8L0",
      "id": "9PB1PKRDD8L0"
    },
    {
      "platform": "amazon",
      "url": "https://www.amazon.com/gp/product/B0BR8TSPKM",
      "id": "B0BR8TSPKM"
    }
  ],
  "categories": [
    "entertainment",
    "lifestyle",
    "social"
  ],
  //ICONS
  "icons": [
    {
      "src": "icon/icon-114.png",
      "type": "image/png",
      "sizes": "114x114"
    },
    {
      "src": "icon/icon-192.png",
      "type": "image/png",
      "sizes": "192x192"
    },
    {
      "src": "icon/icon-300.png",
      "type": "image/png",
      "sizes": "300x300"
    },
    {
      "src": "icon/icon-512.png",
      "type": "image/png",
      "sizes": "512x512"
    }
  ],
  //HANDLES
  "launch_handler": {
    "client_mode": [ "navigate-existing, auto" ]
  },
  "scope_extensions": [
    { "origin": "*.streamingdiscovery.com" }
  ]
}