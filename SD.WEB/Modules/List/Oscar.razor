@page "/List/Oscar"
<PageTitle>SD - Lists - Oscar</PageTitle>
@using SD.Shared.Model
@using SD.WEB.Modules.List.Core
@using SD.WEB.Modules.Profile.Core
@inherits ComponenteCore<Oscar>
@inject WatchedListApi WatchedListApi
@inject WishListApi WishListApi
@inject TmdbApi TmdbApi

<SD.WEB.Modules.List.Components.HeadPage ImageSource="logo/oscar.png" Text="@TranslationText.oscar_desc" Link="https://www.oscars.org/"></SD.WEB.Modules.List.Components.HeadPage>

<SD.WEB.Modules.List.Components.MediaList CardHeader="@EnumLists.OscarBestMotionPicture.GetName()" Items="@ListMotionPicture" list_id="@EnumLists.OscarBestMotionPicture" maxItens="12"
                                          WishList="wishList" WishListChanged="@(async(WishList value)=>{wishList = value; })"
                                          WatchedList="watchedList" WatchedListChanged="@(async (WatchedList value) => { watchedList = value;  })"></SD.WEB.Modules.List.Components.MediaList>
<SD.WEB.Modules.List.Components.MediaList CardHeader="@EnumLists.OscarBestAnimatedFeatureFilm.GetName()" Items="@ListAnimated" list_id="@EnumLists.OscarBestAnimatedFeatureFilm" maxItens="12"
                                          WishList="wishList" WishListChanged="@(async(WishList value)=>{wishList = value; })"
                                          WatchedList="watchedList" WatchedListChanged="@(async (WatchedList value) => { watchedList = value;  })"></SD.WEB.Modules.List.Components.MediaList>
<SD.WEB.Modules.List.Components.MediaList CardHeader="@EnumLists.OscarInternationalFeatureFilm.GetName()" Items="@ListInternational" list_id="@EnumLists.OscarInternationalFeatureFilm" maxItens="12"
                                          WishList="wishList" WishListChanged="@(async(WishList value)=>{wishList = value; })"
                                          WatchedList="watchedList" WatchedListChanged="@(async (WatchedList value) => { watchedList = value;  })"></SD.WEB.Modules.List.Components.MediaList>
<SD.WEB.Modules.List.Components.MediaList CardHeader="@EnumLists.OscarDocumentaryFeature.GetName()" Items="@ListDocumentary" list_id="@EnumLists.OscarDocumentaryFeature" maxItens="12"
                                          WishList="wishList" WishListChanged="@(async(WishList value)=>{wishList = value; })"
                                          WatchedList="watchedList" WatchedListChanged="@(async (WatchedList value) => { watchedList = value;  })"></SD.WEB.Modules.List.Components.MediaList>

@code {
    private HashSet<MediaDetail> ListMotionPicture { get; set; } = new();
    private HashSet<MediaDetail> ListAnimated { get; set; } = new();
    private HashSet<MediaDetail> ListInternational { get; set; } = new();
    private HashSet<MediaDetail> ListDocumentary { get; set; } = new();

    private WishList? wishList { get; set; }
    private WatchedList? watchedList { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();

        ListMotionPicture = await TmdbApi.GetListList(EnumLists.OscarBestMotionPicture, ListMotionPicture);
        ListAnimated = await TmdbApi.GetListList(EnumLists.OscarBestAnimatedFeatureFilm, ListAnimated);
        ListInternational = await TmdbApi.GetListList(EnumLists.OscarInternationalFeatureFilm, ListInternational);
        ListDocumentary = await TmdbApi.GetListList(EnumLists.OscarDocumentaryFeature, ListDocumentary);

        wishList = await WishListApi.Get();
        watchedList = await WatchedListApi.Get();
    }
}