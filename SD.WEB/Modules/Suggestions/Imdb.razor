@page "/Suggestions/Imdb"
<SeoHeader Title="Suggestions | IMDB" Keywords="@(new []{"IMDB"})"></SeoHeader>
@inherits PageNoDataCore<Imdb>

@using SD.WEB.Modules.Suggestions.Core;
@using SD.WEB.Modules.Profile.Core
@using SD.WEB.Modules.Suggestions.Components
@inject ImdbTopRatedApi ImdbTopRatedApi
@inject ImdbPopularApi ImdbPopularApi
@inject ImdbUpcomingApi ImdbUpcomingApi

<HeadPage ImageSource="logo/imdb.png" Text="@TranslationText.imdb_desc" Link="https://www.imdb.com/"></HeadPage>

<MediaList TitleHead="@TranslationText.Popular" MediaListApi="ImdbPopularApi" MaxItens="50" IsIMDB="true" ShowFilter="true" MultipleLanguages="false"></MediaList>
<MediaList MediaListApi="ImdbTopRatedApi" List="EnumLists.ImdbTop250Movies" MaxItens="250" ShowFilter="true"></MediaList>
<MediaList TitleHead="@TranslationText.ComingSoon" MediaListApi="ImdbUpcomingApi" MaxItens="50" IsIMDB="true" ShowOnlyYear="false" MultipleLanguages="false"></MediaList>