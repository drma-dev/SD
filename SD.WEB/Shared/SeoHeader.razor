@inject NavigationManager MyNavigationManager

<PageTitle>@GetTitle()</PageTitle>
<HeadContent>
    @*<meta Name="keywords" Content="@GetKeywords()" />*@
    <meta Property="og:title" Content="@GetTitle()" />
    <meta Name="twitter:title" Content="@GetTitle()" />
    @if (!string.IsNullOrEmpty(Description))
    {
        <meta Name="description" Content="@GetDescription()" />
        <meta Property="og:description" Content="@GetDescription()" />
        <meta Name="twitter:description" Content="@GetDescription()" />
    }
</HeadContent>
<meta property="og:url" content="@MyNavigationManager.Uri">

@code {
    [Parameter] public string? Title { get; set; }

    [Parameter] public string? Description { get; set; } = "Descubra os melhores streamings, filmes e seriados mais populares do momento ou os mais premiados (oscar, globo de ouro, emmys, etc)";

    //[Parameter] public IEnumerable<string> Keywords { get; set; } = new List<string>();

    string GetTitle() => Title is null ? "Streaming Discovery" : $"Streaming Discovery | {Title}";

    string GetDescription()
    {
        if (string.IsNullOrEmpty(Description))
            return "";
        return Description.TrimEnd('.') + ".";
    }

