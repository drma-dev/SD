<Alert Visible="true" Color="Color.Secondary" Margin="Margin.Is2.FromBottom">
    <Row>
        <Column>
            <AlertMessage>
                @if (!string.IsNullOrEmpty(IconName))
                {
                    <Blazorise.Icon Name="@IconName" Margin="Margin.Is1.FromEnd"></Blazorise.Icon>
                }
                <Heading Size="HeadingSize.Is5" Style="font: inherit; display: inherit;">
                    @Title
                </Heading>
            </AlertMessage>
        </Column>
        <Column ColumnSize="ColumnSize.IsAuto">
            @if (ChildContent != null)
            {
                @ChildContent
            }
        </Column>
    </Row>
</Alert>

@code {
    [Parameter] public string? IconName { get; set; }
    [Parameter] public string? Title { get; set; }

    [Parameter] public RenderFragment? ChildContent { get; set; }
}
