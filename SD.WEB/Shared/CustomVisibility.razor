@inherits ComponenteCore<CustomVisibility>

@if (Loading)
{
    <Alert Color="Color.Warning" Visible="true" M>
        <AlertDescription>
            <Blazorise.Icon Class="spinner-border spinner-border-sm"></Blazorise.Icon> @GlobalTranslations.CustomVisibilityLoading
        </AlertDescription>
    </Alert>
}
else if (Invalid)
{
    <Alert Color="Color.Danger" Visible="true">
        <AlertDescription>
            <Blazorise.Icon Name="FontAwesomeIcons.Bug"></Blazorise.Icon> @(CustomError ?? @GlobalTranslations.CustomVisibilityInvalid)
        </AlertDescription>
    </Alert>
}
else if (NoData)
{
    <Alert Color="Color.Primary" Visible="true">
        <AlertDescription>
            <Blazorise.Icon Name="FontAwesomeIcons.ExclamationTriangle"></Blazorise.Icon> @(CustomNoData ?? @GlobalTranslations.CustomVisibilityNoData)
        </AlertDescription>
    </Alert>
}
else
{
    @ChildContent
}

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }

    [Parameter] public bool Loading { get; set; }
    [Parameter] public bool Invalid { get; set; }
    [Parameter] public bool NoData { get; set; }
    [Parameter] public string? CustomError { get; set; } = null;
    [Parameter] public string? CustomNoData { get; set; } = null;
}