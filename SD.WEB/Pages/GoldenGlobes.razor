@page "/GoldenGlobes"
@inherits ComponenteCore<GoldenGlobes>
@inject Services.TMDB.ListService Service

<HeadPage ImageSource="logo/goldenglobes.png" Text="@TranslationText.golden_desc" Link="https://www.goldenglobes.com/"></HeadPage>

<CardMediaList @ref="cardDrama" Service="@Service" CardHeader="@TranslationText.Drama" HasFilter="false"></CardMediaList>
<CardMediaList @ref="cardComedy" Service="@Service" CardHeader="@TranslationText.MusicalComedy" HasFilter="false"></CardMediaList>
<CardMediaList @ref="cardAnimated" Service="@Service" CardHeader="@TranslationText.Animated" HasFilter="false"></CardMediaList>

@code {
    public CardMediaList? cardDrama { get; set; }
    public CardMediaList? cardComedy { get; set; }
    public CardMediaList? cardAnimated { get; set; }

    private Dictionary<string, string> GetExtraParameters(string list_id)
    {
        return new Dictionary<string, string>() { { "list_id", list_id } }; ;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LoadData();
        }
    }

    protected async Task LoadData()
    {
        if (cardDrama != null) await cardDrama.LoadData(extraParameters: GetExtraParameters("7103543"));
        if (cardComedy != null) await cardComedy.LoadData(extraParameters: GetExtraParameters("7103545"));
        if (cardAnimated != null) await cardAnimated.LoadData(extraParameters: GetExtraParameters("7103548"));
    }
}