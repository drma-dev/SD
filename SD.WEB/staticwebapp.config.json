{
  "routes": [
    {
      "route": "/api/public/*",
      "allowedRoles": [
        "anonymous"
      ]
    },
    {
      "route": "/api/adm/*",
      "allowedRoles": [
        "administrator"
      ]
    },
    {
      "route": "/api/*",
      "allowedRoles": [
        "authenticated"
      ]
    },
    {
      "route": "/*",
      "methods": [
        "get",
        "head",
        "post",
        "put",
        "delete",
        "connect",
        "options",
        "trace",
        "patch"
      ],
      "headers": {
        "X-Robots-Tag": "noindex"
      }
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "*.{css,scss,js,png,gif,ico,jpg,svg}"
    ]
  }
}