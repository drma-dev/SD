{
  "routes": [
    {
      "route": "/api/public/*",
      "allowedRoles": [
        "anonymous"
      ]
    },
    {
      "route": "/api/adm/*",
      "allowedRoles": [
        "administrator"
      ]
    },
    {
      "route": "/api/*",
      "allowedRoles": [
        "authenticated"
      ]
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "*.{css,scss,js,png,gif,ico,jpg,svg,ttf,woff2,webmanifest}"
    ]
  },
  "responseOverrides": {
    "404": {
      "rewrite": "/404.html",
      "statusCode": 404
    }
  },
  "globalHeaders": {
    "Content-Security-Policy": "default-src 'self'; script-src 'self' https://cdn.paddle.com https://www.googletagmanager.com; style-src *; img-src *;"
  }
}